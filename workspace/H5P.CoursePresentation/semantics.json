        "label": "Always show",
        "default": false
      },
      {
        "name": "keywordListAutoHide",
        "type": "boolean",
        "label": "Auto hide",
        "default": false
      },
      {
        "name": "keywordListOpacity",
        "type": "number",
        "label": "Opacity",
        "min": 0,
        "max": 100,
        "default": 90
      }
    ]
  },
